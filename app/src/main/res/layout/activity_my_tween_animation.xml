<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/outer_space2"
    tools:context=".MyTweenAnimation">

    <ImageView
        android:id="@+id/theJupiterImageView"
        android:layout_width="@dimen/jupiterImageViewDimension"
        android:layout_height="@dimen/jupiterImageViewDimension"
        android:src="@drawable/jupiter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="@dimen/jupiterImageViewTranslation"
        android:translationY="@dimen/jupiterImageViewTranslation" />

    <ImageView
        android:id="@+id/theEarthImageView"
        android:layout_width="@dimen/earthImageViewDimension"
        android:layout_height="@dimen/earthImageViewDimension"
        android:src="@drawable/earth"
        android:layout_marginStart="@dimen/earthImageViewTranslationX"
        android:layout_marginTop="@dimen/earthImageViewTranslationY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/theAsteroidImageView"
        android:layout_width="@dimen/asteroidImageViewDimension"
        android:layout_height="@dimen/asteroidImageViewDimension"
        android:translationX="@dimen/asteroidImageViewTranslation"
        android:translationY="@dimen/asteroidImageViewTranslation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/explosionImageView"
        android:layout_width="@dimen/explosionImageViewWidth"
        android:layout_height="@dimen/explosionImageViewHeight"
        android:src="@drawable/explosion"
        android:layout_marginStart="@dimen/explosionImageViewTranslationX"
        android:layout_marginTop="@dimen/explosionImageViewTranslationY"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:layout_margin="@dimen/generalBtnMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>